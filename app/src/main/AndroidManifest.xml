<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aightevents">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/aightlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AiGHTEVENTS">
        <activity android:name=".admin_page" />
        <activity android:name=".organizer_page" />
        <activity android:name=".participant_page" />
        <activity android:name=".select_filter" />
        <activity android:name=".event_details" />
        <activity android:name=".new_organizer" />
        <activity android:name=".new_event" />
        <activity android:name=".home_page" />
        <activity android:name=".sign_in_org" />
        <activity android:name=".sign_in" />
        <activity android:name=".sign_up" />
        <activity android:name=".StartPage" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>